{% if product.metafields.c_f.bottom-image-1 != blank %}
  <div class="product-single__images">
    <div class="product-single__images-carousel">
      {% for i in (1..3) %}
        {% capture bottom_image %}bottom-image-{{ i }}{% endcapture %}
        {% capture bottom_headline %}bottom-headline-{{ i }}{% endcapture %}
        {% capture bottom_content %}bottom-content-{{ i }}{% endcapture %}

        {% if product.metafields.c_f[bottom_image] != blank %}
          <div>
            <img class="product-single__sticky-image product-single__sticky-image--{{ forloop.index }} {% if forloop.first %}active{% endif %} small--hide hide" src="{{ product.metafields.c_f.[bottom_image] | replace: '.jpg','_820x600.jpg' }}" data-rjs="{{ product.metafields.c_f.[bottom_image] }}" alt="{{ product.title }} Image">

            <div class="product-single__image product-single__image--{{ i }}">
              <div class="grid--full">
                <div class="grid__item medium--one-half large--one-half">
                  <img src="{{ product.metafields.c_f.[bottom_image] | replace: '.jpg','_820x600.jpg' }}" data-rjs="{{ product.metafields.c_f.[bottom_image] }}" alt="{{ product.title }} image">
                </div>
              </div>

              <div class="product-single__image-content">
                <div class="wrapper">
                  <div class="grid">
                    <div class="grid__item medium--one-half push--medium--one-half large--one-half push--large--one-half">
                      <h3>{{ product.metafields.c_f.[bottom_headline] }}</h3>
                      <p>{{ product.metafields.c_f.[bottom_content] }}</p>

                      <div class="slick-dots">
                        {% for i in (1..3) %}
                          {% capture bottom_image %}bottom-image-{{ i }}{% endcapture %}
                          {% if product.metafields.c_f[bottom_image] != blank %}
                            <div {% if forloop.first %}class="active"{% endif %} data-index="{{ forloop.index0 }}"></div>
                          {% endif %}
                        {% endfor %}
                      </div>

                      <span class="slick-next icon icon-chevron-right small--hide medium--hide"></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endif %}